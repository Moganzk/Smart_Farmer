# ============================================
# Smart Farmer Local Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local files with real credentials
# ============================================

# Prisma Database URLs
# Connect via connection pooling (for app)
DATABASE_URL="postgresql://postgres.YOUR_PROJECT:YOUR_PASSWORD@aws-1-eu-west-1.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection (for migrations)
DIRECT_URL="postgresql://postgres.YOUR_PROJECT:YOUR_PASSWORD@aws-1-eu-west-1.pooler.supabase.com:5432/postgres"

# JWT Configuration
SUPABASE_JWT_SECRET=your_jwt_secret_here

# Expo (React Native) Supabase Config
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_KEY=your_publishable_key_here

# Next.js (Admin Dashboard) Supabase Config
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=your_publishable_key_here
